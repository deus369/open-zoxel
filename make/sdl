install-sdl:
	@ echo " + installing sdl on system"
	@ bash bash/sdl/install_sdl_on_system.sh

help:
	@ echo "install-sdl		installs sdl on system"
	@ echo "remove-sdl		removes sdl from system"
	@ echo "sdl				builds sdl from source"
